package decisao;

import javax.swing.JOptionPane;

/*
 * 		 * Exercicio 2:
		 * Considere receber a quantidade de diárias de um hotel e o valor
		 * da diária. Sobre a diária haverá uma taxa que depende da quantidade
		 * de diárias.
		 * Se a quantidade de diárias for maior que 10 a taxa será de 5%
		 * Se a quantidade estiver entre 5 e 10 a taxa será de 8%
		 * Se a quantidade de diarias for menor que 5 a taxa será de 10%
		 * Exiba o valor final.
 */
public class Exercicio2 {
public static void main(String[] args) {
	short diarias = Short.parseShort(JOptionPane.showInputDialog("Digite Quantidade de Diárias"));
	short vldia = Short.parseShort(JOptionPane.showInputDialog("Digite valor das diárias"));
	if (diarias>10) {
		System.out.println("Valor Total = " + (diarias*vldia*5/100));
	} else if (diarias >=5 && diarias<=10) {
		System.out.println("Valor Total = " + (diarias*vldia*8/100));
	} else if (diarias <5) {
		System.out.println("Valor Total = " + (diarias*vldia*10/100));
	}	
	
	
	
	
	
	
}



}
